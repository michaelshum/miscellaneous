with open("input.txt") as file:
    lines = [line.rstrip() for line in file]

def part1():
    def is_increasing(level):
        init_val = level[0] 
        for val in level[1:]:
            if val < init_val:
                return False
        return True

    def is_decreasing(level):
        init_val = level[0]
        for val in level[1:]:
            if val > init_val:
                return False
        return True
    safe = 0
    level = lines[0]
    print(is_increasing(level), is_decreasing(level))
    for line in lines:
        level = line.split()
        if is_increasing(level) or is_decreasing(level):
            safe += 1

    print(safe)

part1()
